{
  "name": "marko",
  "description": "Marko is an extensible, streaming, asynchronous, high performance, HTML-based templating language that can be used in Node.js or in the browser.",
  "keywords": [
    "templating",
    "template",
    "async",
    "streaming"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/marko.git"
  },
  "scripts": {
    "test": "mocha --ui bdd --reporter spec ./test && jshint compiler/ runtime/ taglibs/",
    "test-fast": "mocha --ui bdd --reporter spec ./test/render-test",
    "test-async": "mocha --ui bdd --reporter spec ./test/render-async-test",
    "test-taglib-loader": "mocha --ui bdd --reporter spec ./test/taglib-loader-test",
    "jshint": "jshint compiler/ runtime/ taglibs/"
  },
  "author": "Patrick Steele-Idem <pnidem@gmail.com>",
  "maintainers": [
    "Patrick Steele-Idem <pnidem@gmail.com>"
  ],
  "dependencies": {
    "app-module-path": "^1.0.0",
    "async-writer": "^1.4.0",
    "browser-refresh-client": "^1.0.0",
    "char-props": "~0.1.5",
    "events": "^1.0.2",
    "htmlparser2": "^3.7.2",
    "jsonminify": "^0.2.3",
    "marko-async": "^2.0.0",
    "marko-layout": "^2.0.0",
    "minimatch": "^9.0.0",
    "property-handlers": "^1.0.0",
    "raptor-args": "^1.0.0",
    "raptor-json": "^1.0.1",
    "raptor-logging": "^1.0.1",
    "raptor-modules": "^1.0.5",
    "raptor-polyfill": "^1.0.0",
    "raptor-promises": "^1.0.1",
    "raptor-regexp": "^1.0.0",
    "raptor-strings": "^1.0.0",
    "raptor-util": "^1.1.2",
    "resolve-from": "^1.0.0",
    "sax": "^0.6.0",
    "try-require": "^1.2.1"
  },
  "devDependencies": {
    "bluebird": "^2.9.30",
    "chai": "~1.8.1",
    "jshint": "^2.9.1-rc1",
    "mocha": "~1.15.1",
    "through": "^2.3.4"
  },
  "license": "Apache-2.0",
  "bin": {
    "markoc": "bin/markoc"
  },
  "main": "runtime/marko-runtime.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "browser": {
    "./node-require.js": "./node-require-browser.js"
  },
  "homepage": "http://markojs.com/",
  "logo": {
    "url": "https://raw.githubusercontent.com/marko-js/branding/master/marko-logo-small.png"
  },
  "version": "2.11.1"
}
